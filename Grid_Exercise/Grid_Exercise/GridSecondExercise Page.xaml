<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grid_Exercise.GridSecondExercise_Page"
             BackgroundColor="#127ac7">
    <Grid Padding="30"
          RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0"
                     VerticalOptions="Center">
            <Label Text="Welcome to Xamarin"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontSize="30"
                   FontAttributes="Bold"/>
            <Label Text="Cross-platform apps made easy"
                   HorizontalOptions="Center"
                   TextColor="White"
                   FontSize="18"/>
        </StackLayout>
        <Button Text="Login"
                Grid.Row="1"
                BackgroundColor="#1dabf0"
                CornerRadius="5"
                TextColor="White"/>
        <Button Text="Register"
                Grid.Row="2"
                BackgroundColor="#1dabf0"
                CornerRadius="5"
                TextColor="White"/>
    </Grid>
</ContentPage>